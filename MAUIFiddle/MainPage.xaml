<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="MAUIFiddle.MainPage"
	xmlns:ctl="clr-namespace:MAUIFiddle.Controls"
	xmlns:behaviors="clr-namespace:MAUIFiddle"
	xmlns:local="clr-namespace:MAUIFiddle"
	Title="KōhīKōdo 🍵"
	x:DataType="local:MainPage">

	<ContentPage.ToolbarItems>
		<ToolbarItem
			Text="📃"
			Command="{Binding NewCommand}" />
		<ToolbarItem
			Text="📂"
			Command="{Binding OpenCommand}" />
		<ToolbarItem
			Text="💾"
			Command="{Binding SaveCommand}" />
	</ContentPage.ToolbarItems>

	<Grid
		BackgroundColor="#FF16171D">
		<!--<Image
	Source="tissue.png" 
	Aspect="AspectFill"/>-->

		<Grid
			RowDefinitions="Auto, 2*, Auto, Auto, Auto">

			<!--toolbar-->
			<Grid
				HeightRequest="32"
				ColumnDefinitions="*, *"
				Padding="10,0">
				<VerticalStackLayout>
					<!--<Label
				Text="C# Code (CTRL+SHIFT+TAB to add tab)"
				FontAttributes="Bold"
				Grid.Row="0"
				TextColor="White" />-->
					<!--<Label
				Text="CurrentPage"
				FontAttributes="Bold"
				Grid.Row="0"
				TextColor="White" />-->
					<Label />
				</VerticalStackLayout>
				<HorizontalStackLayout>
					<HorizontalStackLayout>
						<CheckBox
							x:Name="cbUseLegacyEditor"
							VerticalOptions="Center" />
						<Label
							Text="Plain Text"
							TextColor="White"
							VerticalOptions="Center"
							Margin="-10,0,0,0" />
					</HorizontalStackLayout>

					<Border
						WidthRequest="2"
						Margin="20,4,15,4" />

					<HorizontalStackLayout>
						<CheckBox
							IsChecked="True"
							x:Name="cbAutoRun"
							VerticalOptions="Center" />
						<Label
							Text="Auto Run"
							TextColor="White"
							VerticalOptions="Center"
							Margin="-10,0,0,0" />
					</HorizontalStackLayout>

					<Border
						WidthRequest="2"
						Margin="20,4,15,4" />

					<ctl:TemplatedButton
						Command="{Binding RunCommand}">
						<HorizontalStackLayout>
							<Image
								Source="playbuttonred.png"
								WidthRequest="24"
								HeightRequest="24"
								Aspect="AspectFit" />
							<Label
								Text="Run"
								TextColor="White"
								VerticalOptions="Center" />
						</HorizontalStackLayout>
					</ctl:TemplatedButton>
				</HorizontalStackLayout>
			</Grid>

			<!--legacy editor-->
			<ScrollView
				Orientation="Vertical"
				Grid.Row="1"
				IsVisible="{Binding IsChecked, Source={x:Reference cbUseLegacyEditor}}">
				<Grid
					BackgroundColor="#FF2A2A37"
					ColumnDefinitions="auto, *">

					<Border
						Grid.Column="0"
						BackgroundColor="#FF16161D"
						StrokeThickness="0">
						<Editor
							Margin="5,0,0,0"
							FontSize="{Binding Value, Source={x:Reference fontSizeSlider}}"
							FontFamily="MPLUSCodeLatin"
							Text="1"
							TextColor="#FF2AA0A4"
							x:Name="lineNumber"
							IsReadOnly="True" />
					</Border>

					<Editor
						Grid.Column="1"
						x:Name="CodeEditor"
						FontSize="{Binding Value, Source={x:Reference fontSizeSlider}}"
						Text="// Write C# code here"
						Margin="5,0"
						IsSpellCheckEnabled="False"
						TextColor="#FF92CAF4"
						AutoSize="TextChanges"
						IsTextPredictionEnabled="False"
						TextChanged="CodeEditor_TextChanged"
						FontFamily="MPLUSCodeLatin">
						<Editor.Behaviors>
							<behaviors:EditorStoppedTypingBehavior
								DelayMilliseconds="500"
								StoppedTyping="EditorStoppedTypingBehavior_StoppedTyping" />
						</Editor.Behaviors>
					</Editor>
				</Grid>
			</ScrollView>

			<!--webview editor-->
			<WebView
				x:Name="HtmlCodeEditor"
				BackgroundColor="#FF16171D"
				IsVisible="{Binding IsChecked, Source={x:Reference cbUseLegacyEditor}, Converter={StaticResource ToReverseBooleanConverter}}"
				Grid.Row="1" />

			<!--center toolbar-->
			<Grid
				Grid.Row="2"
				HeightRequest="34">
				<Slider
					Grid.Column="1"
					x:Name="fontSizeSlider"
					VerticalOptions="Center"
					Maximum="20"
					Value="13"
					Minimum="10" />
			</Grid>

			<!--output-->
			<Grid
				Grid.Row="3"
				RowDefinitions="auto, *"
				BackgroundColor="#FF1F1F28">
				<HorizontalStackLayout>
					<CheckBox
						VerticalOptions="Center"
						x:Name="cbShowOutput"
						IsChecked="True" />
					<VerticalStackLayout
						VerticalOptions="Center"
						HorizontalOptions="Start"
						Margin="-10,0,0,0">
						<Label
							Text="Output"
							TextColor="White" />
						<Border
							HeightRequest="4"
							StrokeThickness="0"
							BackgroundColor="#FF2AA0A4"
							Margin="0,3,0,0" />
					</VerticalStackLayout>
				</HorizontalStackLayout>

				<ScrollView
					IsVisible="{Binding IsChecked, Source={x:Reference cbShowOutput}}"
					Grid.Row="1"
					MaximumHeightRequest="200"
					MinimumHeightRequest="200">
					<Editor
						x:Name="OutputLabel"
						Margin="5"
						IsReadOnly="False"
						AutoSize="TextChanges"
						FontFamily="MPLUSCodeLatin"
						FontSize="{Binding Value, Source={x:Reference fontSizeSlider}}"
						TextColor="#FFC3D7A8" />
				</ScrollView>
			</Grid>

			<Grid
				Grid.Row="4"
				HeightRequest="32">

			</Grid>
		</Grid>
	</Grid>

</ContentPage>